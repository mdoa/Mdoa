/**
 * 设置日历的大小
 */
#myCheckInfo .myCheckInfoCalendar{
	float:left;
	width:45%;
	height:100%;
	display: block;
}
 
/**
 * 设置日历顶部盒子
 */
#myCheckInfo .myCheckInfoCalendar .calendarTitle{
	position: relative;
	width: 100%;
	height:50px;
	line-height:50px;
	border-bottom: 1px solid #95B8E7;
}
#myCheckInfo .myCheckInfoCalendar .calendarTitle .yearsSelect{
	float:left;
	width:80px;
	height:23px;
	margin:10px 10px 0 15px;
	border:1px solid #999;
}
#myCheckInfo .myCheckInfoCalendar .calendarTitle .monthsSelect{
	float:left;
  	width:60px;
	height:23px;
	margin-top:10px;
	border:1px solid #999;
}

/**
 * 设置按钮图标
 */
#myCheckInfo .myCheckInfoCalendar .prevMonth,#myCheckInfo .myCheckInfoCalendar .nextMonth{
	float:left;
	width:15px;
	height:21px;
	line-height:21px;
	border:1px solid #999;
	font-size:16px;
	cursor: pointer;
	margin-top:10px;
	text-align:center;
}
#myCheckInfo .myCheckInfoCalendar .prevMonth{
	border-right:0px;
}
#myCheckInfo .myCheckInfoCalendar .nextMonth{
	border-left:0px;
}
 
 
/* 设置日历表格样式 */
#myCheckInfo .calendarTable{
	width: 100%;
	border-collapse: collapse;
	text-align:center;
}
 
/* 表格行高 */
#myCheckInfo .calendarTable tr{
	font-size:14px;
	height:50px;
	line-height:50px;
}
#myCheckInfo .calendarTable tr th{
	height:50px;
	line-height:50px;
}
#myCheckInfo .calendarTable tr td{
	border:1px solid #ccc;
}

/* 当前天 颜色特殊显示 */
#myCheckInfo .calendarTable .currentDay {
	background-color:#eee;
}
 
/* 本月 文字颜色 */
#myCheckInfo .calendarTable .currentMonth {
	color: #666;
	font-weight:bold;
}
#myCheckInfo .calendarTable tr td.currentMonth:hover{
	color:#000;
	background-color:#eee;
}
 
/* 其他月颜色 */
#myCheckInfo .calendarTable .otherMonth{
	color: #ccc;
}

#myCheckInfo .calendarTable td{
	cursor:pointer;
}


#myCheckInfo .myCheckInfoDetail{
	float:left;
	width:55%;
	height:100%;	
}



